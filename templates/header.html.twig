{% set currentPath = path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) %}
<header>
    <nav id="navbar" class="navbar navbar-expand navbar-dark bg-dark">
        <span class="navbar-brand">V. Robin</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-content">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link{{ path('index') == currentPath ? ' active' : '' }}" href="{{ path('index') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{{ path('competences') == currentPath ? ' active' : '' }}" href="{{ path('competences') }}">Mes compétences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{{ path('experiences') == currentPath ? ' active' : '' }}" href="{{ path('experiences') }}">Mes expériences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{{ path('contact') == currentPath ? ' active' : '' }}" href="{{ path('contact') }}">Me contacter</a>
                </li>
            </ul>
        </div>
    </nav>
</header>