{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/competences.css') }}">
{% endblock %}

{% block body %}
    <div class="page-header">
        <h2 class="page-title">Mes compétences</h2>
        <div class="page-header-p3 anim-text-flow">
            développeur web symfony
        </div>
    </div>
    <div class="custom-container">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-12">
                    <div class="button-group filter-button-group">
                        <button class="btn btn-dark" data-filter="*">Tous</button>
                        <button class="btn btn-dark" data-filter="langage">Langage</button>
                        <button class="btn btn-dark" data-filter="base-de-donnees">Base de données</button>
                        <button class="btn btn-dark" data-filter="bibliotheque">Bibliothèque</button>
                        <button class="btn btn-dark" data-filter="framework">Frameworks</button>
                        <button class="btn btn-dark" data-filter="versionning">Versionning</button>
                        <button class="btn btn-dark" data-filter="os">Système d'exploitation</button>
                    </div>
                </div>
                <div class="col-12 grid bg-dark">
                    {% for competence in competences %}
                    <div class="grid-item {{ competence.category|categoryClass }}">{{ competence.label }}<br>
                        <i class="{{ competence.icon }} fa-2x"></i><br>
                        <span class="rating">
                            {% for i in range(1, 5) %}
                                {% if i <= competence.note %}
                                    <span class="fa fa-star"></span>
                                {% else %}
                                    <span class="far fa-star"></span>
                                {% endif %}
                            {% endfor %}
                        </span>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/competences.js') }}"></script>
{% endblock %}